source 'https://rubygems.org'

gem 'rails', '3.2.13'

# database
gem 'pg'

# caching
gem 'memcachier'
gem 'dalli'

# utility
gem 'newrelic_rpm'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :production do
  gem 'unicorn'
  gem 'unicorn-rails'
end

group :test do
  gem 'shoulda'
end

gem 'jquery-rails'
