	<script type="text/javascript">
        $(function(){
            var charts = [], options;
            
            options = {
                chart: {
                    animation: false,
                    backgroundColor: "rgba(255, 255, 255, 0)",
                    spacingBottom: 5,
                    spacingLeft: 0,
                    spacingRight: 10,
                    spacingTop: 3,
                    type: "line"
                },
                credits: { enabled: false },
                legend: {
                    borderColor: "none",
                    padding: 0,
                },
                plotOptions: {
    	            line: {
    	            	animation: false,
    	            	marker: {
    		            	lineColor: "#fff",
    		            	lineWidth: 0,
    		            	radius: 3.5,
    		            	symbol: "circle"
    	            	},
    	            	pointStart: Date.UTC(2007, 1, 1),
                        pointInterval: 365 * 24 * 3600 * 1000,
    	            	shadow: false
    	            }
                },
                tooltip: { shared: true },
                title: { text: null },
                xAxis: {
                	tickInterval: 365 * 24 * 3600 * 1000 * 2,
                    tickLength: 0,
                	type: "datetime"
                },
                yAxis: {
                    gridLineColor: "#ccc",
                	gridLineDashStyle: "ShortDash",
                	gridLineWidth: 1,
                	max: 100,
                	min: 0,
                	labels: {
    	            	formatter: function(){
    		            	return this.value + "%";
    	            	}
                	},
                	lineWidth: 1,
                	tickInterval: 25,
                	tickLength: 0,
                    title: { text: null }
                }
            };
            
            
            // <%= @school.short_name %>
            charts[0] = new Highcharts.Chart($.extend(true, {}, options, {
                chart: { renderTo: <%= @school.short_name %> },
                series: [
                    {
                        color: "#1F88EA",
                        data: [40, 57, 58, 75, 78, 83],
                        name: "Reading"
                    },
                    {
                     	color: "#9E241D",
                        data: [67, 71, 70, 87, 76, 81],
                        name: "Math",
                    },
                    {
                     	color: "#A9B80D",
                        data: [null, 53, null, null, 76, null],
                        name: "Science"
                    }		
                ],
            }));
            
            <% @associated_schools.each do |related_school| %>
            <% chart_i = 1 %>
            	charts[<%= chart_i %>] = new Highcharts.Chart($.extend(true, {}, options, {
                chart: { renderTo: <%= related_school.short_name %> },
                series: [
                    {
                        color: "#1F88EA",
                        data: [52, 63, 53, 70, 85, 90],
                        name: "Reading"
                    },
                    {
                     	color: "#9E241D",
                        data: [75, 80, 72, 74, 88, 88],
                        name: "Math",
                    },
                    {
                     	color: "#A9B80D",
                        data: [null, 69, null, null, 85, null],
                        name: "Science"
                    }		
                ],
            }));
            <% chart_i = chart_i + 1 %>
            <%= chart_i %>
            <% end %>

    </script>
