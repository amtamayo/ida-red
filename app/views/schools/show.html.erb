            }
        });
        
        //MOBILITY CHART
        mobility_chart = new Highcharts.Chart({
            chart: {
                renderTo: 'chart-mobility',
                type: 'line'
            },
            credits: { enabled:false },
            series: [
            {
                name: 'Mobility rate',
                data: <%= raw @school.mobilities.sort_by{|m| m.year_from }.map{ |m| if m.rate.nil? then '' else m.rate end }.inspect %>, 
